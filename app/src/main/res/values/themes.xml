<resources>
  <!-- Base application theme. -->
  <style name="Theme.PMDb" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/white</item>
    <item name="colorTransparentPrimary">@color/white_transparent</item>
    <item name="colorPrimaryVariant">@color/grey_800</item>
    <item name="colorTransparentPrimaryVariant">@color/grey_900_transparent</item>
    <item name="colorPrimaryDark">?colorPrimaryVariant</item>
    <item name="colorOnPrimary">@color/yellow_600</item>
    <item name="colorAccent">?colorOnPrimary</item>
    <!-- Status bar color. -->
    <!--
    <item name="android:statusBarColor" tools:targetApi="m">?colorPrimary</item>
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    -->
    <!-- Customize your theme here. -->
    <item name="colorMovieFormToolbarBackground">@color/white_transparent_light</item>
    <item name="colorMovieFormDivider">@color/grey_500</item>
    <item name="colorSelectedIconsTint">@color/grey_600</item>
    <item name="colorUnSelectedIconsTint">@color/grey_400</item>

    <item name="colorBottomNavigationItemSelected">@color/yellow_600</item>
    <item name="colorBottomNavigationItemUnSelected">@color/white</item>

    <item name="colorCheckedChip">@color/yellow_600</item>
    <item name="colorUnCheckedChip">@color/grey_300</item>

    <item name="colorTransparentMatchedMovieListItemLoading">@color/grey_900_transparent</item>
    <!-- BottomSheetDialog theme -->
    <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
  </style>

  <style name="Theme.PMDb.Splash">
    <item name="android:windowBackground">@drawable/launch_screen_background</item>
  </style>

  <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    <item name="android:windowIsFloating">false</item>
  </style>

  <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
    <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    <item name="android:windowIsFloating">false</item>
  </style>

  <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopRight">16dp</item>
    <item name="cornerSizeTopLeft">16dp</item>
    <item name="cornerSizeBottomRight">0dp</item>
    <item name="cornerSizeBottomLeft">0dp</item>
  </style>

  <style name="Theme.PMDb.MovieFormEditText" parent="Widget.AppCompat.EditText">
    <item name="backgroundTint">@color/selector_color_movie_form_field_tint</item>
    <item name="android:gravity">left</item>
    <item name="android:textColor">@color/selector_color_movie_form_text</item>
    <item name="android:selectAllOnFocus">true</item>
    <item name="android:imeOptions">actionNext</item>
  </style>

  <style name="Theme.PMDb.MovieFormChip" parent="Widget.MaterialComponents.Chip.Filter">
    <item name="checkedIconVisible">false</item>
    <item name="chipBackgroundColor">@color/selector_color_genre_chips</item>
    <item name="android:checkable">true</item>
  </style>
</resources>