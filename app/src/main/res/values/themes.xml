<resources>
  <!-- Base application theme. -->
  <style name="Theme.PMDb" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="android:windowEnableSplitTouch">false</item>
    <item name="android:splitMotionEvents">false</item>
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/white</item>
    <item name="colorOnPrimary">@color/black</item>
    <item name="colorOnPrimaryHint">@color/grey_500</item>
    <item name="colorTransparentPrimary">@color/white_transparent_light</item>
    <item name="colorPrimaryVariant">@color/grey_800</item>
    <item name="colorPrimaryDark">?colorPrimaryVariant</item>
    <item name="colorAccent">@color/yellow_600</item>
    <!-- Status bar color. -->
    <!--
    <item name="android:statusBarColor" tools:targetApi="m">?colorPrimary</item>
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    -->
    <!-- Customize your theme here. -->
    <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    <item name="colorFormDivider">@color/grey_400</item>
    <item name="colorSelectedIconsTint">@color/grey_600</item>
    <item name="colorUnSelectedIconsTint">@color/grey_400</item>

    <item name="colorBottomNavigationItemSelected">@color/yellow_600</item>
    <item name="colorBottomNavigationItemUnSelected">@color/white</item>

    <item name="colorTransparentMatchedMovieListItemLoading">@color/grey_900_transparent</item>

    <item name="colorBackgroundSimpleImdbRate">@color/yellow_600</item>
    <item name="colorBackgroundSimpleRottenTomatoesRate">@color/red_700</item>
    <item name="colorBackgroundSimpleMetacriticRate">@color/grey_600</item>
    <item name="colorBackgroundTvIcon">@color/grey_500</item>

    <item name="colorBackgroundDefaultPoster">@color/grey_400</item>

    <item name="colorBackgroundArchive">@color/grey_100</item>
    <!-- BottomSheetDialog theme -->
    <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    <item name="android:navigationBarColor">?colorPrimaryVariant</item>
    <!-- AlertDialog theme -->
    <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
    <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
    <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
  </style>

  <style name="Theme.PMDb.Splash">
    <item name="android:windowBackground">@drawable/launch_screen_background</item>
  </style>

  <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
    <item name="colorPrimary">@color/grey_500</item>
    <item name="colorAccent">@color/yellow_600</item>
  </style>
</resources>