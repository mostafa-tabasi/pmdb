<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View" />

    <import type="android.text.TextUtils" />

    <variable
      name="viewModel"
      type="com.mstf.pmdb.ui.main.archive.adapter.ArchiveItemViewModel" />

  </data>

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_medium"
    android:layout_marginVertical="@dimen/space_small"
    app:cardCornerRadius="@dimen/space_large"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/parent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?selectableItemBackground"
      android:clickable="true">

      <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@{(viewModel.imdbRate != null) ? @drawable/bg_imdb_rating : (viewModel.rottenTomatoesRate != null) ? @drawable/bg_rotten_tomatoes_rating : (viewModel.metacriticRate != null) ? @drawable/bg_metacritic_rating : null, default = @drawable/bg_imdb_rating}"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:minWidth="@dimen/space_super_massive"
        android:minHeight="@dimen/space_massive"
        android:text="@{(viewModel.imdbRate != null) ? String.valueOf(viewModel.imdbRate) : (viewModel.rottenTomatoesRate != null) ? (viewModel.rottenTomatoesRate+`%`) : (viewModel.metacriticRate != null) ? String.valueOf(viewModel.metacriticRate) : ``}"
        android:textColor="@{(viewModel.imdbRate != null) ? @color/black : @color/white}"
        android:textSize="@dimen/font_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="7.7" />

      <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_medium"
        android:layout_marginVertical="@dimen/space_small"
        android:ellipsize="end"
        android:fontFamily="serif"
        android:gravity="left"
        android:singleLine="true"
        android:text="@{viewModel.title}"
        android:textColor="@color/black"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/rate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Movie Title" />

      <TextView
        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_medium"
        android:layout_marginVertical="@dimen/space_small"
        android:fontFamily="serif"
        android:gravity="left"
        android:singleLine="true"
        android:text="@{`(`+viewModel.yearStart+`)`}"
        android:textColor="@color/grey_600"
        android:textSize="@dimen/font_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="Year" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

</layout>