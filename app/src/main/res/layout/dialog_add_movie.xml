<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:bind="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="viewModel"
      type="com.mstf.pmdb.ui.main.home.add_movie_dialog.AddMovieViewModel" />

  </data>

  <FrameLayout
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
      android:id="@+id/include_find_movie"
      layout="@layout/layout_find_movie"
      bind:viewModel="@{viewModel}" />

    <include
      android:id="@+id/include_matched_movie_list"
      layout="@layout/layout_matched_movie_list"
      android:visibility="invisible"
      bind:viewModel="@{viewModel}" />

    <include
      android:id="@+id/include_blank_form"
      layout="@layout/layout_blank_form"
      android:visibility="invisible"
      bind:viewModel="@{viewModel}" />

  </FrameLayout>

</layout>