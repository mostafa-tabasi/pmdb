<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="android.view.View" />

    <variable
      name="viewModel"
      type="com.mstf.pmdb.ui.main.home.add_movie_dialog.adapter.MatchedMovieItemViewModel" />

  </data>

  <LinearLayout
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:layout_margin="4dp"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_marginBottom="4dp"
      android:layout_weight="1"
      app:cardBackgroundColor="?colorPrimaryVariant"
      app:cardCornerRadius="10dp"
      app:cardElevation="3dp">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
          android:id="@+id/img_poster"
          imageUrl="@{viewModel.poster}"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:adjustViewBounds="true"
          android:scaleType="centerCrop"
          android:src="@drawable/ic_foreground" />

        <ProgressBar
          android:id="@+id/pb_loading"
          style="@style/Widget.AppCompat.ProgressBar.Horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:background="?colorTransparentMatchedMovieListItemLoading"
          android:indeterminate="true"
          android:paddingHorizontal="8dp"
          android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}" />

      </FrameLayout>

    </androidx.cardview.widget.CardView>

    <TextView
      android:id="@+id/txt_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="2dp"
      android:ellipsize="marquee"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:fontFamily="serif"
      android:marqueeRepeatLimit="marquee_forever"
      android:singleLine="true"
      android:text="@{viewModel.title}"
      android:textSize="@dimen/font_large"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="24dp"
      android:layout_marginHorizontal="2dp"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_tv_accent"
        android:visibility="@{viewModel.tv ? View.VISIBLE : View.GONE}" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{`(`+viewModel.year+`)`}"
        android:textSize="@dimen/font_medium" />

    </LinearLayout>

  </LinearLayout>

</layout>