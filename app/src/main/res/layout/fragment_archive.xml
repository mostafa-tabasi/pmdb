<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="viewModel"
      type="com.mstf.pmdb.ui.main.archive.ArchiveViewModel" />

    <import type="android.view.View" />

    <import type="com.mstf.pmdb.R" />

    <import type="com.mstf.pmdb.utils.AppConstants" />

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.main.archive.ArchiveFragment">

    <!--  TODO: handle multi select for next release
    <LinearLayout
