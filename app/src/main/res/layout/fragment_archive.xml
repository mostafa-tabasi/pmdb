        android:clickable="true"
        android:paddingHorizontal="@dimen/space_medium"
        android:src="@drawable/ic_clear"
        app:tint="?colorSelectedIconsTint" />

      <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/space_medium"
        android:background="?android:actionBarItemBackground"
        android:clickable="true"
        android:onClick="@{()->viewModel.setDisplayType(AppConstants.DISPLAY_TYPE_LIST)}"
        android:paddingHorizontal="@dimen/space_medium"
        android:src="@drawable/ic_archive"
        app:tint="@color/black" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/space_medium"
        android:background="?android:actionBarItemBackground"
        android:clickable="true"
        android:onClick="@{()->viewModel.setDisplayType(AppConstants.DISPLAY_TYPE_TILE)}"
        android:paddingHorizontal="@dimen/space_medium"
        android:src="@drawable/ic_archive"
        app:tint="@color/black" />

      <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/space_small"
        android:background="?android:actionBarItemBackground"
        android:clickable="true"
        android:paddingHorizontal="@dimen/space_medium"
        android:src="@drawable/ic_edit"
        android:visibility="@{viewModel.selectedMoviesId.size() == 1 ? View.VISIBLE : View.GONE, default=visible}"
        app:tint="?colorSelectedIconsTint" />

      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/space_small">

        <ImageView
          android:id="@+id/btn_delete"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="?android:actionBarItemBackground"
          android:clickable="true"
          android:paddingHorizontal="@dimen/space_medium"
          android:src="@drawable/ic_delete"
          app:tint="?colorSelectedIconsTint" />

        <ImageView
          android:id="@+id/btn_confirm_delete"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
