<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_nav_graph"
  app:startDestination="@id/homeFragment">

  <fragment
    android:id="@+id/homeFragment"
    android:name="com.mstf.pmdb.ui.main.home.HomeFragment"
    android:label="Home"
    tools:layout="@layout/fragment_home">

  </fragment>

  <fragment
    android:id="@+id/archiveFragment"
    android:name="com.mstf.pmdb.ui.main.archive.ArchiveFragment"
    android:label="Archive"
    tools:layout="@layout/fragment_archive">

  </fragment>

  <fragment
    android:id="@+id/settingsFragment"
    android:name="com.mstf.pmdb.ui.main.settings.SettingsFragment"
    android:label="Settings"
    tools:layout="@layout/fragment_settings">

  </fragment>

  <dialog
    android:id="@+id/addMovieDialog"
    android:name="com.mstf.pmdb.ui.main.home.add_movie_dialog.AddMovieDialog"
    android:label="Add Movie Dialog"
    tools:layout="@layout/dialog_add_movie">

    <action
      android:id="@+id/action_addMovieDialog_to_sampleFragment"
      app:destination="@id/sampleFragment" />

  </dialog>

  <fragment
    android:id="@+id/sampleFragment"
    android:name="com.mstf.pmdb.ui.sample.fragment.SampleFragment"
    android:label="SampleFragment"
    tools:layout="@layout/fragment_sample" />

</navigation>